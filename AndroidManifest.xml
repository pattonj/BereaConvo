<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jacob.patton.bereaconvo"
    android:versionCode="6"
    android:versionName="1.1.2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />
    
    <supports-screens 
        android:largeScreens="true"
         android:xlargeScreens="true"
        />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bc_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock" android:allowClearUserData="true">
        <activity
            android:name="com.jacob.patton.bereaconvo.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jacob.patton.bereaconvo.About"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>