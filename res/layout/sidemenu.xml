<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@drawable/bg_striped"
	android:paddingTop="15dp" >

   	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingLeft="8dp"
		android:paddingRight="20dp"
		android:paddingBottom="3dp"
       > 
		    <TextView 
		       
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/sliding_info" 
		        android:paddingBottom="@dimen/sidemenu_item_topbottom"
		        android:paddingLeft="8dp"
		        android:textSize="25sp"
		     />
		    
		     <View 
			    android:layout_width="match_parent"
			    android:layout_height="1dip"
			    android:background="#CCCCCC" 
			     />
			 
     </LinearLayout>
     
     
    <TextView
        android:id="@+id/ALL"
        android:drawableLeft="@drawable/all_convos"
        android:drawablePadding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/all_button" 
        android:textSize="25sp"
        android:paddingTop="@dimen/sidemenu_item_topbottom"
        android:paddingBottom="@dimen/sidemenu_item_topbottom"
        android:paddingLeft="@dimen/sidemenu_item_left"
        />
    
    	

    
  	<TextView
  	    android:id="@+id/AFTERNOON"
        android:drawableLeft="@drawable/afternoon_convos"
        android:drawablePadding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/afternoon_button"
        android:textSize="25sp" 
        android:paddingTop="@dimen/sidemenu_item_topbottom"
        android:paddingBottom="@dimen/sidemenu_item_topbottom"
        android:paddingLeft="@dimen/sidemenu_item_left"
       /> 
    
    <TextView
        android:id="@+id/EVENING"
        android:drawableLeft="@drawable/evening_convos"
        android:drawablePadding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/evening_button" 
        android:clickable="true"
        android:textSize="25sp"
        android:paddingTop="@dimen/sidemenu_item_topbottom"
        android:paddingBottom="@dimen/sidemenu_item_topbottom"
        android:paddingLeft="@dimen/sidemenu_item_left"
        />
    
  	<TextView
  	    android:id="@+id/SPECIAL"
  	    android:drawableLeft="@drawable/special_convos"
  	    android:drawablePadding="5dp"
       	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/special_button" 
        android:textSize="25sp"
        android:clickable="true"
   		android:paddingTop="@dimen/sidemenu_item_topbottom"
        android:paddingBottom="@dimen/sidemenu_item_topbottom"
        android:paddingLeft="@dimen/sidemenu_item_left"/>
    

</LinearLayout>